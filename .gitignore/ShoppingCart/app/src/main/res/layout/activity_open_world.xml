<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenWorld">

    <ImageView
        android:id="@+id/openWorldImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/openworld" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:text="Open World Games"
        android:textColor="@color/colorPrimary"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/openWorldImage" />

    <ImageView
        android:id="@+id/redDeadImage"
        android:layout_width="116dp"
        android:layout_height="180dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:srcCompat="@drawable/reddead" />

    <TextView
        android:id="@+id/redDeadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Red Dead Redemption II"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redDeadImage" />

    <ImageView
        android:id="@+id/gtaImage"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="252dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:srcCompat="@drawable/gta" />

    <TextView
        android:id="@+id/gtaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Grand Theft Auto V"
        android:textColor="#0037FF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gtaImage" />

    <ImageView
        android:id="@+id/batmanImage"
        android:layout_width="194dp"
        android:layout_height="194dp"
        android:layout_marginTop="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redDeadText"
        app:srcCompat="@drawable/batman" />

    <TextView
        android:id="@+id/batmanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="Batman: Arkham Knight"
        android:textColor="#00031F"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gtaImage" />

    <Button
        android:id="@+id/redDeadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="108dp"
        android:text="Buy"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/redDeadImage"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <Button
        android:id="@+id/gtaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="292dp"
        android:text="Buy"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/gtaImage"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <Button
        android:id="@+id/batmanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="144dp"
        android:text="Buy"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/batmanImage"
        app:layout_constraintTop_toBottomOf="@+id/gtaButton" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="204dp"
        android:text="Back"
        android:onClick="goBack"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/batmanText"
        app:layout_constraintTop_toBottomOf="@+id/gtaButton" />
</androidx.constraintlayout.widget.ConstraintLayout>